<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context="com.desnyki.infinitymenuexample.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.desnyki.library.infinitymenu.RootScrollView
            android:id="@+id/menu_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:fadingEdgeLength="0dp"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/bar1"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="@drawable/bar"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLeft1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_code_white_3x" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imgLeft1"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="24dp"
                        android:text="Enter the Matrix"
                        android:textColor="#F5F5F5" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_right"
                        android:tag="arrow"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bar2"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_below="@+id/bar1"
                    android:background="@drawable/bar"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLeft2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_credit_card_white_3x"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imgLeft2"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="24dp"
                        android:text="Payments"
                        android:textColor="#F5F5F5" />

                    <ImageView
                        android:id="@+id/arrow1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_right"
                        android:tag="arrow"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bar3"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_below="@+id/bar2"
                    android:background="@drawable/bar"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLeft3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_build_white_3x"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imgLeft3"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="24dp"
                        android:text="Settings"
                        android:textColor="#F5F5F5" />

                    <ImageView
                        android:id="@+id/arrow2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_right"
                        android:tag="arrow"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bar4"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_below="@+id/bar3"
                    android:background="@drawable/bar"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLeft4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_bug_report_white_3x"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imgLeft4"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="24dp"
                        android:text="Report a Bug"
                        android:textColor="#F5F5F5" />

                    <ImageView
                        android:id="@+id/arrow3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_right"
                        android:tag="arrow"

                        />
                </RelativeLayout>
            </RelativeLayout>
        </com.desnyki.library.infinitymenu.RootScrollView>

        <com.desnyki.library.infinitymenu.ChildScrollView
            android:id="@+id/child_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:visibility="invisible"></com.desnyki.library.infinitymenu.ChildScrollView>
    </FrameLayout>
</RelativeLayout>
